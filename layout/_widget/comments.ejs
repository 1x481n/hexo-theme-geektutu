<div id="gitalk-container"></div>

<script>
    window.addEventListener('load', function () {
        globalAddCss('https://unpkg.com/gitalk/dist/gitalk.css');
        globalAddScript('https://unpkg.com/gitalk/dist/gitalk.min.js', function () {
            const gitalk = new Gitalk({
                clientID: '<%- config.gitalk.client_id %>',
                clientSecret: '<%- config.gitalk.client_secret %>',
                repo: '<%- config.gitalk.repo %>',
                owner: '<%- config.gitalk.owner %>',
                admin: ['<%- config.gitalk.owner %>'],
                id: window.location.pathname,
                distractionFreeMode: false
            });
            document.querySelector('#gitalk-container').addEventListener('click', function (e) {
                e.stopPropagation();
            });
            gitalk.render('gitalk-container')
        });
    })
</script>