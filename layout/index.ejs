---
layout: page
---
<!-- Main Content -->
<style>
    .index-page {
        padding-left: 30px;
    }
    .index-page-paging {
        text-align: center;
    }
    .post-preview {
        width: 100%;
        height: max-content;
        margin-bottom: 10px;
        box-sizing: border-box;
        display: flex;
        flex-direction: row;
    }

    .post-preview .post-time {
        font-size: 18px;
        color: #999999;
        width: 125px;
    }

    .post-preview .post-info {
        flex: 1;
    }

    .post-preview .post-info a {
        cursor: pointer;
        text-decoration: none;
    }

    .post-preview .post-info .tag {
        color: #999999;
    }

    .post-preview .post-info .title {
        color: #101010;
        font-size: 18px;
        margin-bottom: 0;
    }
</style>


<div class="col-xs-12 index-page">
    <% page.posts.each(function(post){ %>
    <div class="post-preview">
        <div class="post-time"> <%- post.date.format('YYYY-MM-DD') %> </div>
        <div class="post-info">
            <a href="<%- post.path %>">
                <p class="title"><%- post.title || "Untitled" %></p>
            </a>
            <p>
                <% if (post.tags.length){%>
                <span>/</span>
                <% post.tags.forEach(function(tag){ %>
                <a class="tag" href="/tags/#<%= tag.name %>" title="<%= tag.name %>"><%= tag.name %></a>
                <span>/</span>
                <% }) %>
                <% } %>
            </p>
        </div>
    </div>
    <% }); %>
    <div class="index-page-paging">
        <p>
            <% if (page.prev){ %>
            <a href="/<%- page.prev_link %>">« 前一页</a>
            <% } %>
            &nbsp;&nbsp;&nbsp;&nbsp;
            <% if (page.next){ %>
            <a href="/<%- page.next_link %>">下一页 »</a>
            <% } %>
        </p>
    </div>
</div>