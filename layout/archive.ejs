---
layout: layout
---

<style>
    .post-list .post-item-date {
        margin-left: 10px;
        color: hsla(0, 0%, 71%, .9);
        font-size: .85em;
    }
</style>

<!-- Main Content -->
<div class="col-xs-12">
    <div class="post-list">
        <% 
            var years = {};
            site.posts.sort('date').reverse().forEach(function(post){
                var year = post.date.year()
                if(years[year]===undefined){
                    years[year] = [];
                }
                years[year].push(post);
            });
        %>

        <!-- 归档列表 -->
        <ul>
            <% Object.keys(years).reverse().forEach(function(year){  %>
            <li class="post-item-parent post-item-color-<%- year % 5 %>">
                <a href="/archives/#<%- year %>" class="post-text-parent" id="<%= year %>">
                    <%= year %>
                </a>
            </li>
            <% years[year].map(function(post){  %>
            <li>
                <a class="post-item-title" href="/<%- post.path %>"><%- post.title || "Untitled" %></a>
                <span class="post-item-date">(<%= post.date.format('ll') %>)</span>
            </li>
            <% }) %>
            <% }) %>
        </ul>

    </div>
</div>