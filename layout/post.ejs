---
layout: layout
---

<style>
    .comments {
        margin-top: 20px;
    }
</style>
<!-- Post Content -->
<article>
    <div class="row">

        <!-- Post Container -->
        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 post-container">
            <div class="col-xs-12">
                <h1> <%- page.title %> </h1>
                <%- page.content %>
                <hr>
                <div>
                    <p>
                        <span><%- __('tags')%>: </span>
                        <% page.tags.each(function(tag) { %>
                        <code key="<%- tag.name%>" class="post-label"><%- tag.name%></code>
                        <% }) %>
                    </p>
                    <p>
                        <span>本站使用</span>
                        <a href="https://creativecommons.org/licenses/by/4.0/deed.zh">「署名 4.0 国际」</a>
                        <span>创作共享协议，转载请注明出处</span>
                    </p>
                </div>

                <hr />
                <p>
                    <% if (page.prev){ %>
                    <a class="float-left" href="<%= config.root %><%- page.prev.path %>">« <%- page.prev.title %></a>
                    <% } %>
                    <% if (page.next){ %>
                    <a class="float-right" href="<%= config.root %><%- page.next.path %>"><%- page.next.title %> »</a>
                    <% } %>
                </p>
            </div>

            <div class="comments col-xs-12">
                <%- partial('_widget/comments') %>
            </div>
        </div>
        <!-- Tabe of Content -->
        <%- partial('_partial/toc') %>
    </div>
</article>